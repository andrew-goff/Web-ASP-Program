@{
    ViewBag.Title = "Book Logistics";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

    <article>
        <h3>
            About this logistics site.
        </h3>

        <p>
            This site provides book information for bookstores on stock quantity and quality from book suppliers and book authors. 
            It provides bookstores the ability to purchase books in quantity batches and send invoices to them relating to payment outstanding.
        </p>

    </article>

    <aside>
        <h3>Internal Links</h3>
        <p>
            Internal links to other pages of the logistics website.
        </p>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    </ul>
    </aside>
